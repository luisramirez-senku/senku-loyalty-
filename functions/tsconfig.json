{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
    "jsx": "react"  // Added this line
  },
  "compileOnSave": true,
  "include": [
    "src", "src/types"
  ]
}
